<section class="flex justify-center px-6 py-16" id="registro">
  <div class="w-full max-w-[640px] px-8 py-10 text-center text-[#f5f5f5]">
    <h2 class="m-0 mb-2 text-[clamp(1.8rem,4vw,2.5rem)]">Inscríbete ahora</h2>
    <p class="m-0 mb-8 text-[#e0e0e0]">
      Completa tus datos y nos pondremos en contacto contigo.
    </p>

    <form
      action="https://formspree.io/f/mzddjbjd"
      method="POST"
      class="grid gap-5 text-left"
    >
      <label class="grid gap-2 font-semibold text-[#f5f5f5]">
        Nombre
        <input
          class="rounded-full border border-white/35 bg-black/35 px-4 py-[0.85rem] text-base text-[#f5f5f5] placeholder-white/70"
          type="text"
          name="nombre"
          placeholder="Tu nombre completo"
          required
        />
      </label>

      <label class="grid gap-2 font-semibold text-[#f5f5f5]">
        Teléfono
        <input
          class="rounded-full border border-white/35 bg-black/35 px-4 py-[0.85rem] text-base text-[#f5f5f5] placeholder-white/70"
          type="tel"
          name="telefono"
          placeholder="55 0000 0000"
          required
        />
      </label>

      <label class="grid gap-2 font-semibold text-[#f5f5f5]">
        Correo electrónico
        <input
          class="rounded-full border border-white/35 bg-black/35 px-4 py-[0.85rem] text-base text-[#f5f5f5] placeholder-white/70"
          type="email"
          name="email"
          placeholder="correo@ejemplo.com"
          required
        />
      </label>

      <button
        class="cursor-pointer rounded-full border-0 bg-white px-6 py-[0.95rem] text-base font-semibold uppercase tracking-[0.05em] text-[#111] transition duration-200 hover:-translate-y-0.5 hover:shadow-[0_10px_20px_rgba(0,0,0,0.15)]"
        type="submit"
      >
        Inscríbete aquí
      </button>
    </form>
  </div>
</section>
